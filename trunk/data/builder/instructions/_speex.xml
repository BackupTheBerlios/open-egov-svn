  <set version="1.2rc1" date="2008-07-24" state="not-tried">

    <downloads>
      <download file="speex-1.2rc1.tar.gz">
        <url checked="2014-01-20">http://downloads.xiph.org/releases/speex/speex-1.2rc1.tar.gz</url>
        <hash type="CRC32"></hash>
        <hash type="MD5"></hash>
        <hash type="SHA1"></hash>
        <hash type="SHA512"></hash>
        <hash type="RIPEMD256"></hash>
        <size></size>
      </download>
    </downloads>

    <!-- http://git.xiph.org/speex.git -->

    <commands>
PACKAGE_NAME=speex
PACKAGE_VERSION=1.2rc1

oegextract ${PACKAGE_NAME}-${PACKAGE_VERSION}.tar.gz

oegimport libogg   # optional
oegimport fftw     # optional

mkdir -p "${OEG_INSTALL_DIR}${OEG_BASE_DIR}/packages/${PACKAGE_NAME}-${PACKAGE_VERSION}"
#cp AUTHORS "${OEG_INSTALL_DIR}${OEG_BASE_DIR}/packages/${PACKAGE_NAME}-${PACKAGE_VERSION}/"

configure --prefix=${OEG_BASE_DIR} --with-gnu-ld --with-ogg=${OEG_BASE_DIR}
# fails: --with-fft=gpl-fftw3
make
make install-strip DESTDIR=${OEG_INSTALL_DIR}

cd "${OEG_INSTALL_DIR}${OEG_BASE_DIR}"
oegarchive ${PACKAGE_NAME}-${PACKAGE_VERSION}
    </commands>
  </set>
