    <commands>
PACKAGE_NAME=pcre
PACKAGE_VERSION=8.34

# oegimport zlib, bzip2

oegextract ${PACKAGE_NAME}-${PACKAGE_VERSION}.tar.bz2

configure --prefix=${OEG_BASE_DIR} --with-sysroot=${OEG_BASE_DIR} --with-gnu-ld --enable-utf8 --enable-newline-is-anycrlf --bindir=${OEG_BASE_BIN_DIR} --libdir=${OEG_BASE_LIB_DIR} ${CONFIGURE_HOST_PARA}
make
make install-strip DESTDIR=${OEG_INSTALL_DIR}

cd "${OEG_INSTALL_DIR}${OEG_BASE_DIR}"
<if64bits>
mv bin/*.dll bin64/
rm -rf bin
