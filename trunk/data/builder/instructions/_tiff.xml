    <commands>
oegenv 32
oegcleanbase
oegimport zlib-1.2.8
oegimport xz-5.0.5
oegextract tiff-4.0.3.tar.gz
configure --prefix=${OEG_BASE_DIR} --with-gnu-ld --without-x --with-lzma-lib-dir=${OEG_BASE_DIR}/lib --with-lzma-include-dir=${OEG_BASE_DIR}/include --with-zlib-lib-dir=${OEG_BASE_DIR}/lib --with-zlib-include-dir=${OEG_BASE_DIR}/include
make
make install-strip DESTDIR=${OEG_INSTALL_DIR}
cd "${OEG_INSTALL_DIR}${OEG_BASE_DIR}"
oegarchive tiff-4.0.3
